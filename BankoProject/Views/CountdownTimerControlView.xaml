<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BankoProject.Views"
             xmlns:Custom="http://metro.mahapps.com/winfx/xaml/controls" x:Class="BankoProject.Views.CountdownTimerControlView"
             mc:Ignorable="d" 
             >
    <Viewbox>
        <Grid Width="1920" Height="1080">
            <DockPanel DockPanel.Dock="Left" x:Name="OptionsPanel" Background="#FF8B8613" MinHeight="300" Margin="0,0,1517,0" HorizontalAlignment="Right" Width="403">
                <StackPanel Orientation="Vertical" x:Name="Optionspanel" DockPanel.Dock="Top" Height="142" Width="393" >
                    <Label Content="Antal Deltagere:"/>
                    <TextBox Text="3"/>
                </StackPanel>
                <StackPanel Orientation="Vertical" x:Name="StartStopReset" DockPanel.Dock="Bottom" Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center" IsHitTestVisible="False">
                    <Button BorderBrush="{x:Null}" Background="#FF8B8613" Content="Start"/>
                    <Button BorderBrush="{x:Null}" Background="#FF8B8613" Content="Stop"/>
                    <Button BorderBrush="{x:Null}" Background="#FF8B8613" Content="Nulstil"/>
                </StackPanel>
            </DockPanel>
        </Grid>
    </Viewbox>
</UserControl>
