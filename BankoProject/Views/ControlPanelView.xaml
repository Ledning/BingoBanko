<UserControl x:Class="BankoProject.Views.ControlPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BankoProject.Views"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920" Height="1080" Width="1920"
             xmlns:views="clr-namespace:BankoProject.Views"
             xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls">
  <Grid Width="1920" Height="1080" Background="#FFA2A2A2">
    <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Margin="10,10,0,10" Width="580" Background="#FF8C8C8D">
      <Grid>
        <Label x:Name="label" Content="Visuals" Margin="169,10,169,0" VerticalAlignment="Top" FontSize="29.333" HorizontalAlignment="Center" Background="#FF747474">
          <Label.Effect>
            <DropShadowEffect BlurRadius="20"/>
          </Label.Effect>
        </Label>

      </Grid>

    </Border>
    <Border BorderBrush="Black" BorderThickness="1" Margin="625,10,650,10" Background="#FF8C8C8D">
      <Grid>
        <Label x:Name="label_Copy" Content="Banko" Margin="280.156,10,264,0" VerticalAlignment="Top" FontSize="29.333" Background="#FF747474" d:LayoutOverrides="Width">
          <Label.Effect>
            <DropShadowEffect BlurRadius="20"/>
          </Label.Effect>
        </Label>
      </Grid>
    </Border>
    <Border BorderBrush="Black" BorderThickness="1" Margin="0,10,10,10" HorizontalAlignment="Right" Width="600" Background="#FF8C8C8D">
      <Grid>
        <Label x:Name="label_Copy1" Content="Konkurrencer" Margin="199,10,214,0" VerticalAlignment="Top" FontSize="29.333" Background="#FF747474">
          <Label.Effect>
            <DropShadowEffect BlurRadius="20"/>
          </Label.Effect>
        </Label>
        <TextBox x:Name="textBox" Height="36" TextWrapping="Wrap" VerticalAlignment="Top" Margin="29,203,29,0" FontSize="24"/>
        <Label x:Name="label1" Content="Navn på konkurrencen" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="29,149,0,0" Width="250" Height="49" FontSize="24" Background="#FF737374"/>
        <TextBox x:Name="textBox_Copy" Height="36" TextWrapping="Wrap" VerticalAlignment="Top" Margin="29,324,0,0" FontSize="24" HorizontalAlignment="Left" Width="65"/>
        <Label x:Name="label1_Copy" Content="Antal Deltagere" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="29,270,0,0" Width="250" Height="49" FontSize="24" Background="#FF737374" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="textBox_Copy1" Height="36" TextWrapping="Wrap" VerticalAlignment="Top" Margin="0,324,29,0" FontSize="24" HorizontalAlignment="Right" Width="65"/>
        <Label x:Name="label1_Copy1" Content="Antal Hold" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,270,29,0" Width="250" Height="49" FontSize="24" Background="#FF737374" HorizontalContentAlignment="Center"/>
        <Button x:Name="button" Content="Start konkurrence" VerticalAlignment="Bottom" Margin="109,0,109,29.587" Height="54.413" FontSize="24" FontWeight="Bold"/>
        <Button x:Name="button1" Content="Tilføj Hold" VerticalAlignment="Top" Margin="219,324,219,0" Height="36" FontSize="18.667" FontWeight="Bold" RenderTransformOrigin="0.594,0.571"/>
        <TextBox x:Name="textBox_Copy2" Height="36" TextWrapping="Wrap" VerticalAlignment="Top" Margin="29,324,0,0" FontSize="24" HorizontalAlignment="Left" Width="65"/>
        <Label x:Name="label1_Copy2" Content="Varighed" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="29,434,0,0" Width="250" Height="49" FontSize="24" Background="#FF737374" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="textBox_Copy3" Height="36" TextWrapping="Wrap" VerticalAlignment="Top" Margin="29,488,0,0" FontSize="24" HorizontalAlignment="Left" Width="140"/>
      </Grid>
    </Border>

  </Grid>

</UserControl>
