<Window x:Class="BankoProject.Views.PresentationScreenHostView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                   xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        WindowStartupLocation="Manual" Height="{Binding Event.WindowSettings.PrsSettings.Height}" Width="{Binding Event.WindowSettings.PrsSettings.Width}" Focusable="False"
        WindowState="{Binding Event.WindowSettings.PrsSettings.State}"
        ResizeMode ="NoResize"

        Background="{Binding Event.WindowSettings.PrsSettings.BackgroundBrush}" Top="{Binding Event.WindowSettings.PrsSettings.Top}" Left="{Binding Event.WindowSettings.PrsSettings.Left}" ShowInTaskbar="False" Topmost="False" IsHitTestVisible="False" AllowsTransparency="True" WindowStyle="None" >
  <DockPanel  LastChildFill="False">
    <Viewbox DockPanel.Dock="Bottom">
      <metro:MetroContentControl x:Name="ActiveItem" />
    </Viewbox>
  </DockPanel>
  
</Window>
