      </Viewbox>
    </Border>

    <Border Opacity="0.87"  Background="#FFFFE459" CornerRadius="20" Margin="10,0" HorizontalAlignment="Center" VerticalAlignment="Center" MaxHeight="120">
      <Border.Effect>
        <DropShadowEffect/>
      </Border.Effect>
      <Viewbox Stretch="Uniform" StretchDirection="DownOnly" >
        <TextBox Text="{Binding Event.LatestNumbersQueue[2]}"  Width="100" Background="Transparent" Foreground="Black" HorizontalContentAlignment="Center" HorizontalAlignment="Center" BorderThickness="0" FontSize="80" FontWeight="Bold" />
      </Viewbox>
    </Border>

    <Border Opacity="0.87"  Background="#FFFFE459" CornerRadius="20" Margin="10,0" HorizontalAlignment="Center" VerticalAlignment="Center" MaxHeight="120">
      <Border.Effect>
        <DropShadowEffect/>
      </Border.Effect>
      <Viewbox Stretch="Uniform" StretchDirection="DownOnly" >
        <TextBox Text="{Binding Event.LatestNumbersQueue[1]}"  Width="100" Background="Transparent" Foreground="Black" HorizontalContentAlignment="Center" HorizontalAlignment="Center" BorderThickness="0" FontSize="80" FontWeight="Bold" />
      </Viewbox>
    </Border>

    <Border Opacity="0.87"  Background="#FFFFE459" CornerRadius="20" Margin="10,0" HorizontalAlignment="Center" VerticalAlignment="Center" MaxHeight="120">
      <Border.Effect>
        <DropShadowEffect/>
      </Border.Effect>
      <Viewbox Stretch="Uniform" StretchDirection="DownOnly" >
        <TextBox Text="{Binding Event.LatestNumbersQueue[0]}" Width="100" Background="Transparent" Foreground="Black"  HorizontalContentAlignment="Center" HorizontalAlignment="Center" BorderThickness="0" FontSize="80" FontWeight="Bold"/>
      </Viewbox>
    </Border>

    <StackPanel.LayoutTransform>
        <RotateTransform Angle="180"></RotateTransform>
    </StackPanel.LayoutTransform>
  </StackPanel>
</UserControl>
